@model BackgroundSetting
<style>
    .bg-modal {
    position: absolute;
    border-radius: 10px;
    padding: 10px;
    z-index: 100;
    background: white;
    left: 100px;
    right: 100px;
    top: 120px;
    box-shadow: 0 3px 7px rgba(0,0,0,0.3);
    border: 1px solid rgba(0,0,0,0.3);
    }

    .bg-modal .modal-body {
    overflow: auto;
    max-height: 600px;
    }

    .bg-preview {
    height: 200px;
    background-size: cover;
    background-position: top center;
    }
</style>
<div class="modal-header">
    <button type="button" class="close" aria-hidden="true">&times;</button>
    <h3>选择背景</h3>
</div>
<div class="modal-body">
    <ul class="thumbnails">
        @foreach (var bg in Enumerable.Reverse(Model.Backgrounds))
        {
            <li class="span4">
                <a class="thumbnail" data-name="@bg.Name">
                    <div class="bg-preview" style="background-image:url(//static.gmgard.com/@bg.BannerUrl1024)" />
                </a>
            </li>
        }
        <li class="span4">
            <a class="thumbnail" data-name="old">
                <div class="bg-preview" style="background-image:url(//static.gmgard.com/Images/banner.jpg)" />
            </a>
        </li>
    </ul>
</div>